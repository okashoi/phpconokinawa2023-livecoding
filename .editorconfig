root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[composer.json]
indent_size = 4

[*.xml]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
tab_width = 4
